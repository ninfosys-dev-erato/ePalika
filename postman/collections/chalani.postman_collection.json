            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query ListChalanis($filter: ChalaniFilterInput, $pagination: PaginationInput) {\n  chalanis(filter: $filter, pagination: $pagination) {\n    edges {\n      node {\n        id\n        chalaniNumber\n        subject\n        status\n        createdAt\n      }\n    }\n    pageInfo {\n      hasNextPage\n      hasPreviousPage\n      startCursor\n      endCursor\n    }\n    totalCount\n  }\n}",
                "variables": "{\n  \"filter\": {\n    \"status\": \"DRAFT\"\n  },\n  \"pagination\": {\n    \"first\": 10\n  }\n}"
              }
            },
            "url": {
              "raw": "{{graphql_url}}",
              "host": ["{{graphql_url}}"]
            }
          },
          "response": []
        },
