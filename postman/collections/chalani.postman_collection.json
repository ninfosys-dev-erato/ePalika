{
  "info": {
    "name": "ePalika - Chalani Service",
    "description": "Collection for Chalani (Outgoing Correspondence) GraphQL API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.access_token) {",
                  "    pm.environment.set('jwt_token', response.access_token);",
                  "    console.log('JWT token saved to environment');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "client_id",
                  "value": "palika-api",
                  "type": "text"
                },
                {
                  "key": "grant_type",
                  "value": "password",
                  "type": "text"
                },
                {
                  "key": "username",
                  "value": "{{keycloak_username}}",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "{{keycloak_password}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{keycloak_url}}/realms/palika/protocol/openid-connect/token",
              "host": ["{{keycloak_url}}"],
              "path": ["realms", "palika", "protocol", "openid-connect", "token"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Queries",
      "item": [
        {
          "name": "Get Chalani by ID",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query GetChalani($id: ID!) {\n  chalani(id: $id) {\n    id\n    chalaniNumber\n    fiscalYear\n    subject\n    status\n    createdAt\n    updatedAt\n  }\n}",
                "variables": "{\n  \"id\": \"{{chalani_id}}\"\n}"
              }
            },
            "url": {
              "raw": "{{graphql_url}}",
              "host": ["{{graphql_url}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get Chalani by Number",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query GetChalaniByNumber($chalaniNumber: Int!, $fiscalYear: FiscalYear!, $scope: Scope!, $wardId: ID) {\n  chalaniByNumber(chalaniNumber: $chalaniNumber, fiscalYear: $fiscalYear, scope: $scope, wardId: $wardId) {\n    id\n    chalaniNumber\n    fiscalYear\n    subject\n    status\n    createdAt\n  }\n}",
                "variables": "{\n  \"chalaniNumber\": 1,\n  \"fiscalYear\": \"FY_2081_82\",\n  \"scope\": \"MUNICIPALITY\",\n  \"wardId\": null\n}"
              }
            },
            "url": {
              "raw": "{{graphql_url}}",
              "host": ["{{graphql_url}}"]
            }
          },
          "response": []
        },
        {
          "name": "List Chalanis",
