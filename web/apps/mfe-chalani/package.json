{
  "name": "@egov/mfe-chalani",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "//": "---- DEV ----",
    "dev": "pnpm dev:standalone",
    "dev:standalone": "vite --port 5202 --mode standalone --open /",
    "dev:federated": "vite --port 5202 --mode federated",
    "dev:integrated": "vite --port 5202 --mode integrated",
    "//2": "---- BUILD (CI/Release) ----",
    "build": "pnpm build:federated",
    "build:standalone": "vite build --mode standalone",
    "build:federated": "vite build --mode federated",
    "build:integrated": "vite build --mode integrated",
    "//3": "---- PREVIEW (local dist serve) ----",
    "preview:standalone": "vite preview --mode standalone --port 5222 --strictPort",
    "preview:federated": "vite preview --mode federated --port 5223 --strictPort",
    "preview:integrated": "vite preview --mode integrated --port 5224 --strictPort",
    "//4": "---- QUALITY ----",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^4.0.6",
    "@egov/api-schema": "workspace:*",
    "@egov/api-types": "workspace:*",
    "@egov/state-core": "workspace:*",
    "@egov/ui": "workspace:*",
    "@module-federation/vite": "^1.8.1",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-router": "^1.132.19",
    "@vitejs/plugin-react": "^5.0.4",
    "framer-motion": "^12.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@egov/runtime": "workspace:*",
    "@egov/design-system": "workspace:*",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.2",
    "sass": "^1.79.0",
    "typescript": "^5.6.3",
    "vite": "^7.1.9"
  }
}
