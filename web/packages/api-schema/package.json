{
  "name": "@egov/api-schema",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": {
      "node": "./src/index.ts",
      "default": "./src/browser.ts"
    },
    "./mocks": "./src/mocks/index.ts",
    "./generated": "./src/generated/index.ts"
  },
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "prebuild": "node scripts/generate-schema-string.mjs",
    "build": "echo 'Schema string generated'",
    "postinstall": "node scripts/generate-schema-string.mjs"
  },
  "dependencies": {
    "@apollo/client": "^3.10.0",
    "@faker-js/faker": "^9.3.0",
    "msw": "^2.7.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "^4.5.1",
    "@graphql-codegen/typed-document-node": "^5.0.12",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-operations": "^4.4.2",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "@types/node": "^24.6.2"
  },
  "msw": {
    "workerDirectory": [
      "../../apps/shell/public"
    ]
  }
}
